# AWS Configuration
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Application Configuration
NODE_ENV=development
PORT=3000
JWT_SECRET=your_jwt_secret_here

# DynamoDB Tables (will be auto-generated based on service name and stage)
USERS_TABLE=ai-language-learning-backend-dev-users
CONVERSATIONS_TABLE=ai-language-learning-backend-dev-conversations

# AWS AI Services (Singapore Region)
LEX_BOT_ID=your_lex_bot_id_here
LEX_BOT_ALIAS_ID=your_lex_alias_id_here
LEX_REGION=ap-southeast-1

# Amazon Bedrock
BEDROCK_MODEL_ID=amazon.nova-pro-v1:0
BEDROCK_REGION=us-east-1

# Amazon Transcribe
TRANSCRIBE_LANGUAGE_CODE=en-US
TRANSCRIBE_REGION=ap-southeast-1

# Amazon Polly
POLLY_VOICE_ID=Joanna
POLLY_REGION=ap-southeast-1

# Amazon S3 (for audio file storage)
S3_BUCKET_NAME=ai-learning-transcriptions
S3_REGION=ap-southeast-1

# Frontend Configuration
VITE_API_URL=your_api_gateway_url_here
VITE_WS_URL=ws://localhost:3000
