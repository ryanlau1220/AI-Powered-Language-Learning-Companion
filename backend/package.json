{
  "name": "ai-language-learning-backend",
  "version": "1.0.0",
  "description": "Backend for AI-Powered Language Learning Companion",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon --quiet src/index.js",
    "start": "node src/index.js",
    "deploy:apprunner": "powershell -ExecutionPolicy Bypass -File scripts/deploy-apprunner.ps1",
    "deploy:apprunner:prod": "powershell -ExecutionPolicy Bypass -File scripts/deploy-apprunner.ps1 prod",
    "deploy:apprunner:staging": "powershell -ExecutionPolicy Bypass -File scripts/deploy-apprunner.ps1 staging",
    "setup:apprunner": "powershell -ExecutionPolicy Bypass -File scripts/setup-apprunner.ps1",
    "docker:build": "docker build -t ai-language-learning-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env ai-language-learning-backend",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "aws-sdk": "^2.1490.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.11.0",
    "multer": "^2.0.2",
    "pdf-parse": "^1.1.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
